{% extends 'base.html.twig' %}

{% block title %}Création d'un utilisateur
{% endblock %}

{% block content %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<div class="main-card">
		<div class="w-4/6">
	<h1>Création d'un utilisateur</h1>
			{{ form_errors(registrationForm) }}

			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.email) }}

			{{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' }) }}

			{{ form_row(registrationForm.agreeTerms) }}
			<div class="flex flex-row justify-center w-full mt-8">
				<button type="submit" class="btn btn-primary">Enregistrer le nouvel utilisateur</button>
			</div>
			  {{ form_end(registrationForm) }}
    </div>
  </div>
{% endblock %}
