{% extends 'base.html.twig' %}

{% block title %}Contact - Patrice Gerin | Développeur Full Stack
{% endblock %}

{% block content %}
<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
    <!-- Hero Section -->
    <section class="relative overflow-hidden py-16 lg:py-24">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-600/20 to-purple-600/20"></div>
        <div class="relative mx-auto max-w-7xl px-6 lg:px-8">
            <div class="text-center">
                <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl">
                    <span class="block">Une question ?</span>
                    <span class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400">
                        Contactez-moi
                    </span>
                </h1>
                <p class="mx-auto mt-6 max-w-2xl text-lg leading-8 text-gray-300">
                    Je suis disponible pour discuter de vos projets, répondre à vos questions
                    ou simplement échanger sur le développement web et mobile.
                </p>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="pb-16 lg:pb-24">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">

                <!-- Contact Info Cards -->
                <div class="lg:col-span-1 space-y-6">
                    <!-- Email Card -->
                    <div class="relative group">
                        <div class="absolute -inset-1 bg-gradient-to-r from-blue-600 to-purple-600 rounded-xl blur opacity-25 group-hover:opacity-75 transition duration-500"></div>
                        <div class="relative bg-gray-800 p-6 rounded-xl shadow-lg border border-gray-700">
                            <div class="flex items-center space-x-4">
                                <div class="flex-shrink-0">
                                    <div class="w-12 h-12 bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg flex items-center justify-center">
                                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                        </svg>
                                    </div>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="text-sm font-medium text-gray-400">Email</p>
                                    <a href="mailto:p.gerin@usygec.fr" class="text-base font-semibold text-white hover:text-blue-400 transition-colors break-all">
                                        p.gerin@usygec.fr
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Location Card -->
                    <div class="relative group">
                        <div class="absolute -inset-1 bg-gradient-to-r from-green-600 to-blue-600 rounded-xl blur opacity-25 group-hover:opacity-75 transition duration-500"></div>
                        <div class="relative bg-gray-800 p-6 rounded-xl shadow-lg border border-gray-700">
                            <div class="flex items-center space-x-4">
                                <div class="flex-shrink-0">
                                    <div class="w-12 h-12 bg-gradient-to-r from-green-600 to-blue-600 rounded-lg flex items-center justify-center">
                                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                        </svg>
                                    </div>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="text-sm font-medium text-gray-400">Localisation</p>
                                    <p class="text-base font-semibold text-white">Saint-Étienne</p>
                                    <p class="text-sm text-gray-400">Loire, France</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- LinkedIn Card -->
                    <div class="relative group">
                        <div class="absolute -inset-1 bg-gradient-to-r from-blue-500 to-blue-700 rounded-xl blur opacity-25 group-hover:opacity-75 transition duration-500"></div>
                        <div class="relative bg-gray-800 p-6 rounded-xl shadow-lg border border-gray-700">
                            <div class="flex items-center space-x-4">
                                <div class="flex-shrink-0">
                                    <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-blue-700 rounded-lg flex items-center justify-center">
                                        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                                            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                                        </svg>
                                    </div>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="text-sm font-medium text-gray-400">LinkedIn</p>
                                    <a href="https://www.linkedin.com/in/patrice-gerin/" target="_blank" rel="noopener noreferrer" class="text-base font-semibold text-white hover:text-blue-400 transition-colors">
                                        /patrice-gerin
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="lg:col-span-2">
                    <div class="relative group">
                        <div class="absolute -inset-1 bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl blur opacity-20 group-hover:opacity-30 transition duration-500"></div>
                        <div class="relative bg-gray-800 p-8 rounded-2xl shadow-xl border border-gray-700">
                            <h2 class="text-2xl font-bold text-white mb-6">Envoyez-moi un message</h2>

                            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                                <div>
                                    <label for="{{ form.name.vars.id }}" class="block text-sm font-medium text-gray-300 mb-2">
                                        Nom complet
                                    </label>
                                    {{ form_widget(form.name, {'attr': {'class': 'block w-full rounded-lg bg-gray-700 border-gray-600 text-white placeholder-gray-400 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition-colors', 'placeholder': 'Jean Dupont'}}) }}
                                    {{ form_errors(form.name) }}
                                </div>

                                <div>
                                    <label for="{{ form.email.vars.id }}" class="block text-sm font-medium text-gray-300 mb-2">
                                        Email
                                    </label>
                                    {{ form_widget(form.email, {'attr': {'class': 'block w-full rounded-lg bg-gray-700 border-gray-600 text-white placeholder-gray-400 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition-colors', 'placeholder': 'jean.dupont@exemple.fr'}}) }}
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>

                            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                                <div>
                                    <label for="{{ form.phone.vars.id }}" class="block text-sm font-medium text-gray-300 mb-2">
                                        Téléphone
                                    </label>
                                    {{ form_widget(form.phone, {'attr': {'class': 'block w-full rounded-lg bg-gray-700 border-gray-600 text-white placeholder-gray-400 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition-colors', 'placeholder': '+33 6 12 34 56 78'}}) }}
                                    {{ form_errors(form.phone) }}
                                </div>

                                <div>
                                    <label for="{{ form.subject.vars.id }}" class="block text-sm font-medium text-gray-300 mb-2">
                                        Sujet
                                    </label>
                                    {{ form_widget(form.subject, {'attr': {'class': 'block w-full rounded-lg bg-gray-700 border-gray-600 text-white placeholder-gray-400 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition-colors', 'placeholder': 'Demande de renseignements'}}) }}
                                    {{ form_errors(form.subject) }}
                                </div>
                            </div>

                            <div>
                                <label for="{{ form.message.vars.id }}" class="block text-sm font-medium text-gray-300 mb-2">
                                    Message
                                </label>
                                {{ form_widget(form.message, {'attr': {'class': 'block w-full rounded-lg bg-gray-700 border-gray-600 text-white placeholder-gray-400 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition-colors', 'rows': '6', 'placeholder': 'Décrivez votre projet ou votre demande...'}}) }}
                                {{ form_errors(form.message) }}
                            </div>

                            <div class="flex items-center justify-between pt-4">
                                <p class="text-sm text-gray-400">
                                    <svg class="inline w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
                                    </svg>
                                    Vos informations sont sécurisées
                                </p>
                                {{ form_widget(form.envoyer, {'attr': {'class': 'inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-0.5'}}) }}
                            </div>

                            {{ form_rest(form) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Back to home -->
    <section class="pb-16 lg:pb-24">
        <div class="mx-auto max-w-7xl px-6 lg:px-8 text-center">
            <a href="{{ path('home') }}" class="inline-flex items-center text-gray-400 hover:text-blue-400 transition-colors font-medium">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Retour à l'accueil
            </a>
        </div>
    </section>
</div>
{% endblock %}
