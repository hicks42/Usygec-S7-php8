<!-- Modal Image Zoom -->
<div id="modal-image-zoom" class="fixed inset-0 bg-black/95 backdrop-blur-sm z-[60] hidden items-center justify-center p-4" onclick="closeImageZoom()">
    <button onclick="closeImageZoom()" class="absolute top-4 right-4 bg-gray-800/80 hover:bg-gray-700 text-white rounded-full p-3 transition-colors z-10">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
    </button>
    <div class="relative max-w-7xl max-h-[90vh] w-full h-full flex items-center justify-center" onclick="event.stopPropagation()">
        <img id="zoomed-image" src="" alt="" class="max-w-full max-h-full object-contain rounded-lg shadow-2xl">
        <div id="image-caption" class="absolute bottom-4 left-1/2 transform -translate-x-1/2 bg-gray-900/90 px-6 py-3 rounded-lg text-white font-medium"></div>
    </div>
</div>
