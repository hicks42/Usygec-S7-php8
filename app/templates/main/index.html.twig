{% extends 'base.html.twig' %}
{% import 'main/macros/_project_card.html.twig' as cards %}

{% block title %}Usygec - Développement applications web et mobiles
{% endblock %}

{% block importmap %}
    {{ importmap(['app', 'homepage-modals']) }}
{% endblock %}

{% block content %}
<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
    {# Hero Section #}
    {{ include('main/partials/_hero_section.html.twig') }}

    {# Projects Section #}
    <section id="features" class="py-16 lg:py-24">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="mx-auto max-w-2xl text-center">
                <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
                    Mes Réalisations
                </h2>
                <p class="mt-6 text-lg leading-8 text-gray-300">
                    Des applications concrètes développées pour mettre en pratique mes compétences
                    en développement Full Stack
                </p>
            </div>

            <div class="mx-auto mt-16 grid grid-cols-1 gap-8 lg:grid-cols-3 max-w-7xl">
                {# Project 1: Time2Gether #}
                {{ cards.projectCard({
                    modal_id: 't2g',
                    gradient: 'from-blue-600 to-purple-600',
                    image: 'images/time2gether/dates.png',
                    image_alt: 'Time2Gether - Gestion de dates',
                    image_position: 'object-center',
                    icon_bg: 'bg-gray-900',
                    icon_overflow: 'overflow-hidden',
                    icon_image: 'images/time2gether/icon.jpg',
                    badge_bg: 'bg-blue-500/20',
                    badge_border: 'border-blue-500/30',
                    badge_text: 'text-blue-300',
                    badge: 'React Native • Mobile',
                    title: 'Time2Gether',
                    description: 'Application mobile collaborative pour organiser des moments entre amis.',
                    button_color: 'text-blue-400',
                    button_hover: 'text-blue-300'
                }) }}

                {# Project 2: BAM #}
                {{ cards.projectCard({
                    modal_id: 'bam',
                    gradient: 'from-green-600 to-blue-600',
                    image: 'images/bam/BAM-companies-index.jpg',
                    image_alt: 'BAM - Gestion des entreprises',
                    image_position: 'object-top',
                    icon_bg: 'bg-gradient-to-r from-green-600 to-blue-600',
                    icon_svg: '<svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>',
                    badge_bg: 'bg-green-500/20',
                    badge_border: 'border-green-500/30',
                    badge_text: 'text-green-300',
                    badge: 'Symfony • CRM',
                    title: 'B.A.M.',
                    description: 'Un remplacement numérique aux post-it qui s\'accumulent sur votre bureau.',
                    button_color: 'text-green-400',
                    button_hover: 'text-green-300'
                }) }}

                {# Project 3: Contact/Profil Patrice Gerin #}
                {{ cards.projectCard({
                    modal_id: 'contact',
                    gradient: 'from-purple-600 to-pink-600',
                    image: 'images/Usygec/code-background.jpg',
                    image_alt: 'Patrice Gerin - Développeur Full Stack',
                    image_position: 'object-center',
                    icon_bg: 'bg-gradient-to-r from-purple-600 to-pink-600',
                    icon_overflow: 'overflow-hidden',
                    icon_image: 'images/Usygec/Patrice-Gerin-600-sqre.png',
                    badge_bg: 'bg-purple-500/20',
                    badge_border: 'border-purple-500/30',
                    badge_text: 'text-purple-300',
                    badge: 'Contact & CV',
                    title: 'Patrice Gerin',
                    description: 'Développeur Full Stack passionné, disponible pour de nouveaux projets.',
                    button_color: 'text-purple-400',
                    button_hover: 'text-purple-300'
                }) }}
            </div>
        </div>
    </section>

    {# Modals - Fichiers partiels #}
    {{ include('main/partials/_modal_time2gether.html.twig') }}
    {{ include('main/partials/_modal_bam.html.twig') }}
    {{ include('main/partials/_modal_contact.html.twig') }}
    {{ include('main/partials/_modal_image_zoom.html.twig') }}

    {# CTA Section #}
    {{ include('main/partials/_cta_section.html.twig') }}

    {# About Section #}
    {{ include('main/partials/_about_section.html.twig') }}
</div>

{# Scroll to top button #}
<a href="#" class="scroll-top"><em class="fas fa-angle-up"></em></a>
{% endblock %}
