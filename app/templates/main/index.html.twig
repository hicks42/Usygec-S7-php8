                {{ cards.projectCard({
                    modal_id: 'ezr',
                    gradient: 'from-orange-600 to-yellow-600',
                    image: 'images/ezr/etablissements-list.png',
                    image_alt: 'EZReview - Gestion d\'avis clients',
                    image_position: 'object-center',
