{% extends 'raw.html.twig' %}

{% block title %}Modifier son beneficiare
{% endblock %}

{% block content %}
	<div class="content">
		<div class="small-content bg-slate-200 p-5">
			{{ form_start(form) }}
			{# {% if error %}
								<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %} #}

			<h1 class="h3 mb-3 font-weight-normal">Modification du bénéficiaire</h1>
			<div class="flex flex-wrap justify-between">
				{{ form_row(form.lastName) }}
				{{ form_row(form.firstName) }}</div>
			<div class="flex flex-wrap justify-between">
				{{ form_row(form.birthDate) }}
				{{ form_row(form.birthPlace) }}</div>
			<div class="flex flex-wrap justify-between">
				<div class="flex flex-col justify-between">
					{{ form_row(form.address1) }}
					{{ form_row(form.address2) }}</div>
					<div class="flex flex-col justify-between">
						{{ form_row(form.cp) }}
						{{ form_row(form.city) }}</div>
				</div>
				{{ form_row(form.country) }}

				{{ form_end(form) }}
			</div>
		</div>
	{% endblock %}
