{{ form_start(form) }}
<div class="form-group">
	<div class="row my-2">
		{{ form_row(form.name) }}
	</div>
	<div class="row">
		{{ form_row(form.description) }}
	</div>
	<div class="row flex justify-between my-2">
		<div class="col-3">
			{{ form_row(form.reminder) }}
		</div>
		<div class="col-3">
			{{ form_row(form.dueDate) }}
		</div>
		<div class="col-3">
			{{ form_row(form.isActive) }}
		</div>
	</div>
</div>
<div class="flex justify-between my-3 w-full">
	<div class="btn-group" role="group">
		{% if company is not defined %}
			{% set company = company %}
		{% endif %}
		<a class="btn btn-outline-primary" href="{{ path('app_companies_show', {'id': company.id}) }}">Retour</a>
		<button class="btn btn-group btn-success">{{ button_label|default('Enregistrer') }}</button>
	</div>
</div>
{{ form_end(form) }}
