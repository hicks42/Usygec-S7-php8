<form method="POST" action="{{ path('app_activities_delete', {'id': activity.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ activity.id) }}">
	<button type="submit" class="btn btn-danger fs-6">
		<i class="fa-solid fa-trash-can"></i>
	</button>
</form>
