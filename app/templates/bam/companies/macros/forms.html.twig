{# form to make a new activity #}
{% macro newForm(form) %}
	{{ form_row(form.name) }}
        {{ form_errors(form.name) }}
	{{ form_row(form.description) }}
        {{ form_errors(form.description) }}
	<div class="flex flex-col md:flex-row md:gap-4 mt-1">
		<div class="flex flex-col basis-full md:basis-1/2 mb-1">
			{{ form_label(form.reminder) }}{{ form_widget(form.reminder, { 'id': 'reminder-' ~ form.vars.id }) }}
		</div>
		<div class="flex flex-col basis-full md:basis-1/2 mb-1">
			{{ form_label(form.dueDate) }}{{ form_widget(form.dueDate, { 'id': 'dueDate-' ~ form.vars.id }) }}
		</div>
	</div>
	<div class="activity-buttons flex justify-around mt-2">
		<span class="new-active" style="display: none;">
			{{ form_row(form.isActive, { 'checked': 'checked' }) }}
		</span>
	</div>
{% endmacro newForm %}

{# form for existing activities #}
{% macro existForm(form) %}
	<div class="basis-full p-1">
		{{ form_row(form.name)}}
        {{ form_errors(form.name) }}
		{{ form_row(form.description)}}
        {{ form_errors(form.description) }}
		<div id="{{ form.vars.name }}" class="flex flex-col md:flex-row md:gap-4 mt-1">
			<div class="flex flex-col basis-full md:basis-1/2 mb-1">
				{{ form_label(form.reminder) }}{{ form_widget(form.reminder, { 'id': 'reminder-' ~ form.vars.id }) }}
			</div>
			<div class="flex flex-col basis-full md:basis-1/2 mb-1">
				{{ form_label(form.dueDate) }}{{ form_widget(form.dueDate, { 'id': 'dueDate-' ~ form.vars.id }) }}
			</div>
		</div>
		<div class="activity-buttons flex justify-around mt-2"></div>
	</div>
{% endmacro existForm %}
