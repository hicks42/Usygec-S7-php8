{% extends 'logged_in_base.html.twig' %}

{% block title %}Création d'un utilisateur
{% endblock %}

{% block content %}
	<h3>Créer un Utilisateur :</h3>
	{{ form_start(registrationForm) }}
	<div class="row">
		<div class="col-md-12">
			{{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' }) }}
			{# {{ form_row(registrationForm.agreeTerms) }} #}
			<button type="submit" class="btn btn-primary btn-lg btn-block my-5">Créer</button>
		</div>
	</div>
	{% do form.company.setRendered %}
	{% do form.structures.setRendered %}
	{{ form_end(registrationForm) }}
{% endblock %}
