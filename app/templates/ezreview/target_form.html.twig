{% extends 'base.html.twig' %}

{% block title %}EasyReview mail ciblé.
{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock javascripts %}

{% block content %}

	<div class="flex justify-center w-full">
		<div class="card flex flex-col rounded-lg mt-5 p-2 md:p-5 w-full sm:w-1/2 mx-auto">
			<h3>Envoyer un mail à :</h3>
			<div class="flex flex-col md:flex justify-center mt-5">
				{{ form_start(form) }}
					{{ form_row(form.email) }}
				{{ form_rest(form) }}
				<div class="w-full flex justify-around">
					<a href="{{ path('ezreview_hp') }}" class="btn btn-secondary btn-sm my-5">
						<i class="fa-solid fa-angles-left"></i>
						Retour</a>
					<button type="submit" class="btn btn-primary btn-sm my-5">
						Envoyer
					</button>
				</div>
			</div>
		</div>
	</div>

	{{ form_end(form) }}
{% endblock %}
