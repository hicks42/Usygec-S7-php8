<header class="SiteHeader">
	<div class="SiteHeader-contact c-grey">
		<span class="ttu f-bold">Une question ?</span>&nbsp;&nbsp; Contactez-nous au
		<span class="f-bold">04 04 04 04</span>&nbsp;&nbsp;
		<small class="c-grey f-italic">Prix d'un appel local</small>
		&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Suivez-nous sur les réseaux sociaux &nbsp;
		<a href="https://twitter.com/capitalinvest" target="_blank" class="c-grey">
			<span class="hidden">Nous suivre sur Twitter</span> <em class="fab fa-twitter"></em>
		</a>
		&nbsp;
		<a href="https://www.linkedin.com/company/capitalinvest" target="_blank" class="icon-linkedin c-grey">
			<span class="hidden">Nous suivre sur Linkedin</span> <i class="fab fa-linkedin"></i>
		</a>
	</div>

	<div class="HomeHeader">
		<div class="logo-container">
			<a href="/" class="SiteHeader-logo">
				<img src="/images/logo-magnacarta.svg" alt="Magnacarta - Gestion de Patrimoine">
			</a>
		</div>

		<div class="promo-container">
			{% if promos is defined and promos is not empty %}
				{% for promo in promos %}
					<article class="promo-card">
						<h1>Promotion du jour !!!</h1>
						<div class="promo-info">
							<div class="promo-image">
								{% if promo.slug %}
									<a href="{{ path('produit_show', {slug: promo.slug}) }}">
										<img src="/images/placeholder.jpg" alt="{{ promo.name|default('Produit') }}" width="200">
									</a>
								{% endif %}
							</div>
							<div>
								<h2>
									{% if promo.slug %}
										<a href="{{ path('produit_show', {slug: promo.slug}) }}">{{ promo.name|default('Sans nom') }}</a>
									{% else %}
										{{ promo.name|default('Sans nom') }}
									{% endif %}
								</h2>
								<div class="info-container mx-1">
									{% if promo.socGest %}
										<div><small>Géré par :</small> {{ promo.socGest }}</div>
									{% endif %}

									{% if promo.categorie %}
										<div><small>Catégorie :</small> {{ promo.categorie }}</div>
									{% endif %}

									{% if promo.capital %}
										<div><small>Capital :</small> {{ promo.capital }}</div>
									{% endif %}

									{% if promo.thematique %}
										<div><small>Thém. :</small> {{ promo.thematique }}</div>
									{% endif %}

									{% if promo.createdAt %}
										<div><small>Date de création :</small> {{ promo.createdAt|date("d/m/Y") }}</div>
									{% endif %}

									{% if promo.capitalisation is defined %}
										<div><small>Capitalisation :</small> {{ promo.capitalisation }} Mds €</div>
									{% endif %}
								</div>
							</div>
						</div>
					</article>
				{% endfor %}
			{% endif %}
		</div>

		<div class="actu-container">
			{% if actus is defined and actus is not empty %}
				{% for actu in actus %}
					<article class="actu-card">
						<h1>Actualité</h1>
						<hr>
						<div class="actu-info">
							<div>
								<h2>{{ actu.title|default('Sans titre') }}</h2>
								<div class="actu-info mx-1">
									{% if actu.content %}
										{{ actu.content|striptags|slice(0, 100) }}...
									{% endif %}
									<br>
									{% if actu.slug %}
										<a href="{{ path('actu_show', {slug: actu.slug}) }}">Lire</a>
									{% endif %}
								</div>
							</div>
						</div>
					</article>
				{% endfor %}
			{% endif %}
		</div>
	</div>
</header>
